<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1B4F72"
        tools:context=".MenuInicio">

    <TextView
            android:text="Â¿Cuantos garrafones necesitas?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="20sp"
            app:layout_constraintVertical_bias="0.086" android:textColor="@color/white"/>
    <ImageView
            android:layout_width="236dp"
            android:layout_height="213dp" app:srcCompat="@drawable/garrafones" android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.104" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:layout_width="74dp"
            android:layout_height="70dp" android:id="@+id/buttonresta"
            android:background="@drawable/styleround"
            android:text="-"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginTop="72dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:textSize="25sp"
            tools:ignore="SpeakableTextPresentCheck" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.157"/>
    <Button
            android:layout_width="74dp"
            android:layout_height="70dp" android:id="@+id/bottonsuma"
            android:text="+"
            android:textColor="@color/white"
            android:background="@drawable/styleround"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginTop="72dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="52dp"
            app:layout_constraintVertical_bias="0.0" android:textSize="25sp"
            tools:ignore="SpeakableTextPresentCheck"
    />
    <Button
            android:layout_width="187dp"
            android:layout_height="55dp"
            android:id="@+id/botonpedir"
            android:background="@drawable/stylebutton"
            android:text="Pedir"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/textcant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.678" android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="108dp"
            android:layout_height="65dp" android:id="@+id/textcant"
            android:background="@drawable/styleplaintext"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/bottonsuma"
            app:layout_constraintStart_toEndOf="@+id/buttonresta"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginTop="72dp"
            android:textSize="27sp" android:gravity="center" app:layout_constraintHorizontal_bias="0.48"/>
    <TextView
            android:text="Total:"
            android:layout_width="81dp"
            android:layout_height="31dp" android:id="@+id/textView5"
            android:textSize="20sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonresta" android:layout_marginTop="56dp"
            android:gravity="center" android:textColor="#FFFFFF"/>
    <TextView
            android:layout_width="63dp"
            android:layout_height="30dp" android:id="@+id/txtprecio"
            android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.076" android:layout_marginBottom="156dp"
            android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>